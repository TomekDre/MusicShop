<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] | Music Shop App</title>

    <link href="~/css/Site.css"
          rel="stylesheet"
          asp-fallback-href="~/lib/twitter-bootstrap/css/bootstrap.css"
          asp-fallback-test-class="sr-only"
          asp-fallback-test-property="position"
          asp-fallback-test-value="absolute"
          integrity="" 
          crossorigin="anonymous" />
</head>
<body>
    <header>
        <nav class="navbar bg-dark navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand text-white" href="/">
                    <img src="~/images/logo.png" width="40" height="40" asp-append-version="true" />
                    { MusicShop }
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-dark">Login</a>
                            <a class="btn btn-dark">Register</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-white" asp-controller="home" asp-action="index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="home" asp-action="aboutus">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="home" asp-action="contactus">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="music" asp-action="getallvinyls">All Vinyls</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="music" asp-action="addnewmusic">Add new</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-protocol="http" asp-host="hardwax.com">Hard Wax</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderSection("breadcrumb", required: false)

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            Copyright &copy; { Music Shop } @DateTime.Now.Year
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
