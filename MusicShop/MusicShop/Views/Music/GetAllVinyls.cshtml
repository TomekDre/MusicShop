@using MusicShop.Models
@model IEnumerable<VinylModel>
@{
    Layout = "_Layout";
}

<div class="container">
    <h3 class="display-4">All vinyls</h3>
    <div class="row">

        @foreach (var vinyl in Model)
         {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"></svg>
                    <div class="card-body">
                        <h3 class="card-title">@vinyl.Title</h3>
                        <p class="card-text">@vinyl.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/music/getvinyl/@vinyl.Id" class="btn btn-sm btn-outline-secondary">View details</a>
                            </div>
                            <small class="text-muted">@vinyl.Artist</small>
                        </div>
                    </div>
                </div>
            </div>
         }
    </div>
</div>